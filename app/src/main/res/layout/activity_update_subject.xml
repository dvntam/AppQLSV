<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="Update Subject"
        android:textColor="#F44336"
        android:gravity="center"
        android:layout_marginTop="80dp">

    </TextView>
    <EditText
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/EditTextUpdateSubjectTitle"
        android:hint="Subject title"
        android:layout_width="300dp"
        android:layout_height="60dp">
    </EditText>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/EditTextUpdateSubjectCredit"
        android:hint="Credit"
        android:layout_width="300dp"
        android:layout_height="60dp">
    </EditText>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/EditTextUpdateSubjectTime"
        android:hint="time"
        android:layout_width="300dp"
        android:layout_height="60dp">
    </EditText>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/EditTextUpdateSubjectPlace"
        android:hint="place"
        android:layout_width="300dp"
        android:layout_height="60dp">
    </EditText>
    <Button
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/buttonUpdateSubject"
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Subject title">

    </Button>

</LinearLayout>